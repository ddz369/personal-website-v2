{
  "name": "personal-website-v2",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "sitemap": "tsx --tsconfig tsconfig.json scripts/generate-sitemap.ts",
    "precheck": "pnpm type:check && pnpm format:check && pnpm lint",
    "prebuild": "pnpm sitemap && pnpm precheck",
    "export": "next build",
    "start": "serve out -s -p 3000",
    "serve:static": "cd out && serve -s -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type:check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\""
  },
  "dependencies": {
    "@emailjs/browser": "^4.4.1",
    "@phosphor-icons/react": "^2.1.7",
    "@vercel/analytics": "^1.5.0",
    "framer-motion": "^12.5.0",
    "next": "15.2.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-intersection-observer": "^9.16.0",
    "sitemap": "^8.0.0",
    "swiper": "^11.2.6",
    "typewriter-effect": "^2.21.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.2.3",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-react": "^7.37.4",
    "next-seo": "^6.6.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "serve": "^14.2.4",
    "sharp": "^0.33.5",
    "tailwindcss": "4.0",
    "tsx": "^4.19.3",
    "typescript": "^5"
  }
}
